<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="#f00"
    android:background="@color/main_bg_gray">

    <RelativeLayout
        android:id="@+id/rl_mine_menu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dimen_56"
        android:layout_marginStart="@dimen/dimen_12"
        android:layout_marginEnd="@dimen/dimen_12"
        android:background="@drawable/shape_rect_white_r12"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >
        <!-- 我的应用标题 -->
        <TextView
            android:id="@+id/tv_used_menu"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_12"
            android:text="首页应用"
            android:textColor="@color/common_txt_color"
            android:textSize="@dimen/dimen_16sp"
            android:textStyle="bold" />
        <!-- 我的应用缩略图 -->
        <LinearLayout
            android:id="@+id/ll_thumb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dimen_12"
            android:layout_toEndOf="@id/tv_used_menu"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_used_menu1"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:background="@drawable/bg_home_icon_placeholder"
                android:padding="@dimen/dimen_3"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_used_menu2"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginLeft="-12dp"
                android:background="@drawable/bg_home_icon_placeholder"
                android:padding="@dimen/dimen_3"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_used_menu3"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginLeft="-12dp"
                android:background="@drawable/bg_home_icon_placeholder"
                android:padding="@dimen/dimen_3"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_used_menu4"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginLeft="-12dp"
                android:background="@drawable/bg_home_icon_placeholder"
                android:padding="@dimen/dimen_3"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_used_menu5"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginLeft="-12dp"
                android:background="@drawable/bg_home_icon_placeholder"
                android:padding="@dimen/dimen_3"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible" />

            <ImageView
                android:id="@+id/iv_used_menu6"
                android:layout_width="@dimen/dimen_32"
                android:layout_height="@dimen/dimen_32"
                android:layout_marginLeft="-12dp"
                android:background="@drawable/bg_home_icon_placeholder"
                android:padding="@dimen/dimen_3"
                android:scaleType="fitXY"
                android:visibility="gone"
                tools:visibility="visible" />

        </LinearLayout>

        <ImageView
            android:id="@+id/iv_more"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen_56"
            android:layout_centerVertical="true"
            android:layout_toStartOf="@id/tv_edit"
            android:scaleType="center"
            android:padding="@dimen/dimen_15"
            android:src="@drawable/common_ic_arrow_gray_down"
            android:visibility="visible" />

        <!-- 我的应用-切换编辑状态 -->
        <TextView
            android:id="@+id/tv_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginEnd="@dimen/dimen_12"
            android:background="@drawable/shape_green_rect_r8"
            android:gravity="center"
            android:paddingStart="@dimen/dimen_9"
            android:paddingTop="@dimen/dimen_6"
            android:paddingEnd="@dimen/dimen_9"
            android:paddingBottom="@dimen/dimen_6"
            android:text="@string/common_edit"
            android:textColor="@color/white"
            android:textSize="@dimen/dimen_12sp" />
    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>